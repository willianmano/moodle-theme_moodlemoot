{{#hasslideshowcourses}}
    <div id="frontpageslideshow">
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                {{#slideshowcourses}}
                    <li data-target="#carouselExampleCaptions" data-slide-to="{{{slidercounter}}}" {{#active}}class="active"{{/active}}></li>
                {{/slideshowcourses}}
            </ol>
            <div class="carousel-inner">
                {{#slideshowcourses}}
                    <div class="carousel-item {{#active}}active{{/active}}">
                        <a href="{{config.wwwroot}}/course/view.php?id={{id}}">
                            <img src="{{{courseheader}}}" alt="{{{name}}}" class="d-block w-100" style="height: 480px;">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>{{{name}}}</h5>
                            </div>
                        </a>
                    </div>
                {{/slideshowcourses}}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Anterior</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Pr√≥ximo</span>
            </a>
        </div>
    </div>
{{/hasslideshowcourses}}